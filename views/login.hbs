<div id="login" class="container">
    <div class="row">
        <div class="col">
            <form method="post">
                <div class="form-group">
                    <label for="emailAdress">Email adresi *</label>
                    <input required type="email" class="form-control" id="emailAdress" aria-describedby="emailHelp"
                        name="email">
                    <small id="emailHelp" class="form-text text-muted">E postanizi hic kimseyle paylasmayiz
                    </small>
                </div>
                <div class="form-group">
                    <label for="pw">Sifre *</label>
                    <input required type="password" class="form-control" id="pw" name="password">
                </div>
                <div class="form-group">
                    <a href="/register">Yeni hesap olustur</a>
                </div>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="rememberMe">
                    <label class="form-check-label" for="rememberMe">Beni hatirla</label>
                </div>
                <button type="submit" class="btn btn-primary mt-2">SUBMIT</button>
            </form>
        </div>
    </div>
</div>